@model List<Lap_Shop.Models.TbCategory>
<center>
    <div class="col-lg-10 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Employee Table</h4>
                <div class="col-12">

                    <a href="/admin/Categores/Edit1">
                        <button type="button" class="btn btn-inverse-info btn-fw" href="">Add Category</button>
                    </a>
                    <table class="table table-striped" id="order-listing">
                        <thead>
                            <tr>
                                <th> Category name </th>
                                <th> Title </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var cat in Model)
                            {
                                <tr style="margin:0px;padding:0px;">
                                    <td class="col-md-8">@cat.CategoryName</td>
                                    <td class="text-right">
                                        <a style="height:max-content"
                                           asp-controller="Categores" asp-action="Edit1" asp-route-categoryId="@cat.CategoryId"
                                           class="btn btn-info btn-fw">Edit</a>
                                        <a style="height:max-content"
                                           asp-controller="Categores" asp-action="Show" asp-route-categoryId="@cat.CategoryId"
                                           class="btn btn-light"> <i class="mdi mdi-eye text-primary"></i>Show</a>

                                        <a asp-controller="Categores" asp-action="Delete" asp-route-categoryId="@cat.CategoryId"
                                           class="btn btn-light"
                                           onclick="return confirm(" Are you sure");"> <i class="mdi mdi-close text-danger"></i>Remove</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</center>
@section script {
    <!-- Plugin js for this page -->
    <script src="~/Admin/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/Admin/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <!-- End plugin js for this page -->
    <!-- Custom js for this page -->
    <script src="~/Admin/js/data-table.js"></script>
    <!-- End custom js for this page -->
}