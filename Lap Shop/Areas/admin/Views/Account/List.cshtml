@model IEnumerable<VmUserRoles>
<center>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Employee Table</h4>
                <div class="col-12">
                    <a style="height:max-content"
                       asp-controller="Account" asp-action="Add" 
                       class="btn btn-info btn-fw">Add new user</a>

                    <table class="table table-striped" id="order-listing">
                        <thead>
                            <tr>
                                <th>  id </th>
                                <th> username </th>
                                <th> First Name </th>
                                <th> Last Name </th>
                                <th> email </th>
                                <th> Role </th>
                                <th> Title </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var cat in Model)
                            {
                                <tr style="margin:0px;padding:0px;">
                                    <td class="col-md-8">@cat.userid</td>
                                    <td class="col-md-8">@cat.username</td>
                                    <td class="col-md-8">@cat.FirstName</td>
                                    <td class="col-md-8">@cat.LastName</td>
                                    <td class="col-md-8">@cat.Email</td>
                                    <td class="col-md-8">@string.Join(", ",cat.roles)</td>
                             
                                   
                                      
                                   
                                    <td class="text-right">
                                        <a style="height:max-content"
                                           asp-controller="Account" asp-action="Edit" asp-route-userid="@cat.userid"
                                           class="btn btn-info btn-fw">Edit</a>
                                     
                                        <a asp-controller="Account" asp-action="Delete" asp-route-userid="@cat.userid"
                                           class="btn btn-light"
                                           onclick="return confirm(" Are you sure");"> <i class="mdi mdi-close text-danger"></i>Remove</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</center>
@section script {
    <!-- Plugin js for this page -->
    <script src="~/Admin/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/Admin/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <!-- End plugin js for this page -->
    <!-- Custom js for this page -->
    <script src="~/Admin/js/data-table.js"></script>
    <!-- End custom js for this page -->
}