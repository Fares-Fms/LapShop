@model Lap_Shop.Models.TbItem


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Form elements </h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Forms</a></li>
                <li class="breadcrumb-item active" aria-current="page">Form elements</li>
            </ol>
        </nav>
    </div>
   
    <form class="forms-sample" method="post" enctype="multipart/form-data"
          asp-controller="Items" asp-action="Save_with_image" role="form">
    <div class="row">
     

        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>
                    <p class="card-description"> Basic form layout </p>
                        <div class="form-group">
                            <label for="exampleInputUsername1">item Name</label>
                            <input asp-for="ItemName" type="text" class="form-control" placeholder="Item Name">
                            <span asp-validation-for="ItemName" class="alert-danger"></span>
                            <input type="hidden" asp-for="ItemId" />
                            <input type="hidden" asp-for="CurrentState" />
                            <input type="hidden" asp-for="CreatedDate" />
                            <input type="hidden" asp-for="CreatedBy" />
                           
                        </div>

                        <div class="form-group">
                            <label for="exampleInputUsername1">Category Name</label>
                            <select asp-items="@(new SelectList(ViewBag.CategoryBag,"CategoryId","CategoryName"))" asp-for="CategoryId" class="form-select"></select>
                            
                        </div>

                        <div class="form-group">
                            <label for="exampleInputUsername1">OS Name</label>
                            <select asp-items="@(new SelectList(ViewBag.osbag,"OsId","OsName"))"asp-for="OsId" class="form-select"></select>
                          
                        </div>

                           <div class="form-group">
                            <label for="exampleInputUsername1">Category Name</label>
                            <select asp-items="@(new SelectList(ViewBag.ItemTypeBag,"ItemTypeId","ItemTypeName"))" asp-for="ItemTypeId" class="form-select"></select>
                           
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Category Name</label>
                            <input asp-for="SalesPrice" type="text" class="form-control" placeholder="Sales Price">
                            <span asp-validation-for="SalesPrice" class="alert-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Purchase Price</label>
                            <input asp-for="PurchasePrice" type="text" class="form-control" placeholder="Purchase Price">
                            <span asp-validation-for="PurchasePrice" class="alert-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Weight</label>
                            <input asp-for="Weight" type="text" class="form-control" placeholder="Weight">
                            <span asp-validation-for="Weight" class="alert-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">
                                Image
                            </label>
                            <input asp-for="ImageName" type="file" name="Files"
                                   class="form-control" placeholder="Image"
                                   onchange="Upload.UploadDefaultImg(event)" accept=".jpg, .jpeg, .png, ,.gif">

                        </div>








                    </div>
                </div>
            </div>
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Default form</h4>
                        <p class="card-description"> Basic form layout </p>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Gpu</label>
                            <input asp-for="Gpu" type="text" class="form-control" placeholder="Gpu">
                            <span asp-validation-for="Gpu" class="alert-danger"></span>
                    
                        </div>

                        <div class="form-group">
                            <label for="exampleInputUsername1">Processor Name</label>
                            <input asp-for="Processor" type="text" class="form-control" placeholder="CPU">
                            <span asp-validation-for="Processor" class="alert-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputUsername1">HardDisk</label>
                            <input asp-for="HardDisk" type="text" class="form-control" placeholder="Hard Disk">
                            <span asp-validation-for="HardDisk" class="alert-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputUsername1">RAM</label>
                            <input asp-for="RamSize" type="text" class="form-control" placeholder="RAM">
                            <span asp-validation-for="RamSize" class="alert-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Screen Reslution</label>
                            <input asp-for="ScreenReslution" type="text" class="form-control" placeholder="Screen Reslution">
                            <span asp-validation-for="ScreenReslution" class="alert-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Screen Size</label>
                            <input asp-for="ScreenSize" type="text" class="form-control" placeholder="Screen Size">
                            <span asp-validation-for="ScreenSize" class="alert-danger"></span>
                        </div>

                        <div class="card-body">
                            <span id="tbImgName"></span>
                            <div id="tbImgSrc" >
                                <img  />
                            </div>
                        </div>






                       

            <button type="submit" formmethod="post" class="btn btn-gradient-primary me-2">save</button>
                        <button type="reset"  class="btn btn-gradient-primary me-2">clear</button>
                    </div>
                </div>
            </div>
           
       
    </div>
     </form>
</div>

@section script
{
    <script>
        var Upload = {
            UploadDefaultImg: function (e) {
                const file = e.target.files[0];
                const reader = new FileReader();
                reader.onloadend = () => {
                    CourseMediaImgName = file.name;
                    CourseMediaImgBase64 = reader.result.slice(reader.result.indexOf('base64,') + 7);
                    $("#tbImgName").html(file.name)
                    $("#tbImgSrc").html(`<img class="thumbnail" src = "${reader.result}"  style = "width: 200px;height: 300px;border-radius: 5px;border: 1px solid #d9d9d9;padding: 1px;" />`)
                };
                reader.readAsDataURL(file);
            }
        }
    </script>
}
