@model VmInvoice

    <!-- breadcrumb start -->
    <div class="breadcrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="page-title">
                        <h2>cart</h2>
                    </div>
                </div>
                <div class="col-sm-6">
                    <nav aria-label="breadcrumb" class="theme-breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                            <li class="breadcrumb-item active">cart</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb End -->


    <!--section start-->
    <section class="cart-section section-b-space">
     
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <table class="table cart-table table-responsive-xs">
                        <thead>
                            <tr class="table-head">
                                <th scope="col">image</th>
                                <th scope="col">product name</th>
                                <th scope="col">price</th>  
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var items in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Show_items" asp-action="Main" asp-route-Id="@items.ItemId"><img src="~/Uploads/Items/@items.ImageName" alt=""></a>
                                    </td>
                                    <td>
                                        <a href="#">@items.ItemName</a>
                                      
                                    </td>
                                <td>
                                    <div class="col-xs-3">
                                        <h2 class="td-color">$@items.PurchasePrice</h2>
                                    </div>
                                </td>
                                </tr>
                           
                            
                       
                      }
                        </tbody>

                    </table>
                    <table class="table cart-table table-responsive-md">
                        <tfoot>
                            <tr>
                                <td>total price :</td>
                                <td>
                               @{ decimal total=0;}
                                @foreach(var item in Model.Items)
                                {
                                     total += item.PurchasePrice;
                                }
                                    <h4>$@total</h4>

                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
          
        </div>
                        }
    </section>